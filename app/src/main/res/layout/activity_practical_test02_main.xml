<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PracticalTest02MainActivity">

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/server"
            android:textSize="30sp"
            android:id="@+id/ServerTextView"/>

        <EditText
            android:id="@+id/PortEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ServerTextView"
            android:layout_alignParentStart="true"
            android:ems="7"
            android:hint="@string/serverport"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ServerTextView"
            android:layout_alignParentEnd="true"
            android:ems="7"
            android:text="@string/connectbutton"
            android:id="@+id/ConnectButton"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="@string/client"
            android:textSize="30sp"
            android:id="@+id/ClientTextView"
            android:layout_below="@id/PortEditText"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address"
            android:layout_below="@id/ClientTextView"
            android:layout_alignParentStart="true"
            android:hint="@string/clientaddress"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/portClient"
            android:layout_below="@id/ClientTextView"
            android:layout_alignParentEnd="true"
            android:hint="@string/clientport"
            android:ems="7"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/address"
            android:id="@+id/word"
            android:hint="@string/clientword"
            android:ems="7"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/send_request"
            android:ems="14"
            android:layout_below="@id/portClient"
            android:layout_alignParentEnd="true"
            android:text="@string/send_request"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/response"
            android:ems="20"
            android:layout_below="@id/word"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>